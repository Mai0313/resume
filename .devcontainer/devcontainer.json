{
  "customizations": {
    "vscode": {
      "extensions": [
        "cweijan.dbclient-jdbc",
        "cweijan.vscode-redis-client",
        "eamodio.gitlens",
        "github.copilot-chat",
        "golang.go",
        "huggingface.huggingface-vscode-chat",
        "ms-azuretools.vscode-containers",
        "ms-azuretools.vscode-docker",
        "ms-python.debugpy",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.vscode-python-envs",
        "ms-toolsai.jupyter",
        "ms-toolsai.jupyter-keymap",
        "ms-toolsai.jupyter-renderers",
        "ms-toolsai.vscode-jupyter-cell-tags",
        "ms-toolsai.vscode-jupyter-slideshow",
        "ms-vscode.cpptools",
        "ms-vscode.cpptools-extension-pack",
        "ms-vscode.cpptools-themes",
        "natqe.reload",
        "oderwat.indent-rainbow",
        "redhat.vscode-yaml",
        "rust-lang.rust-analyzer",
        "smcpeak.default-keys-windows",
        "tamasfe.even-better-toml"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "bash",
            "icon": "terminal-bash"
          },
          "zsh": {
            "path": "zsh"
          }
        }
      }
    }
  },
  "dockerFile": "Dockerfile",
  "updateContentCommand": "yarn install",
  "mounts": [
    "source=${localEnv:HOME}/.gitconfig,target=${containerEnv:HOME}/.gitconfig,type=bind,consistency=cached,ro",
    "source=${localEnv:HOME}/.ssh,target=${containerEnv:HOME}/.ssh,type=bind,consistency=cached,ro",
    "source=${localEnv:HOME}/.p10k.zsh,target=${containerEnv:HOME}/.p10k.zsh,type=bind,consistency=cached,ro"
  ]
}
